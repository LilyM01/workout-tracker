@{
    ViewData["Title"] = "Create Account";
}

@model WorkoutTracker.Models.CreateAccountModel;

<h2>@ViewData["Title"]</h2>
<form asp-controller="Home" asp-action="CreateAccount" method="post">
    <div class="form-control">
        <label>Username:</label>
        <input type="text" asp-for="Username" required placeholder="Enter something goofy here that you *hopefully* won't forget" />
        <br>
        <label>Password:</label>
        <input type="password" asp-for="Password" required placeholder="FYI: 1234 is not a good one.." />
        <br>
        <label>Confirm Password:</label>
        <input type="password" asp-for="ConfirmPassword" required placeholder="Enter 1234 here again. Wait a minute.." />
        <br>
        <label>Email:</label>
        <input type="email" asp-for="Email" placeholder="Helps recover your account (not required)."/>
        <br>
		<label>Phone Number:</label>
        <input type="tel" asp-for="PhoneNumber" placeholder="Helps recover your account (not required)." />
        <br>
		<label>First Name:</label>
        <input type="text" asp-for="FirstName" placeholder="Used in place of your username sometimes (not required)." />
        <br>
		<label>Last Name:</label>
        <input type="text" asp-for="LastName" placeholder="Used in place of your username sometimes (not required)." />
        <br>

        <button type="submit" class="btn btn-primary mt-4">Create Account</button>
    </div>
</form>